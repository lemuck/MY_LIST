
<h1 class="text-center">All ingredients</h1>

<%= form_tag ingredients_path, method: :get do %>
   <div class="d-flex search">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find an ingredient"%>
      <%= submit_tag "Search", class: "btn btn-flat" %>
    </div>
  <% end %>


<% @ingredients.each do |ingredient| %>
  <div class="card-product">
    <img src="https://images.pexels.com/photos/4110101/pexels-photo-4110101.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" />
    <div class="card-product-infos">

      <h2 id="ingredient-<%= ingredient.id %>"><%= ingredient.name %></h2>

      <p>Price: <%= ingredient.unit_price%>$</p>
      <p>Unit of measure: <%= ingredient.unit%></p>
      <p>Category: <%= ingredient.category%></p>
    </div>

    <div class="quantity-selector">

    </div>
      <div class="form-ingredient">
        <%= simple_form_for @detail_basket, html: { id: "simple-form-person-number"} do |f| %>
          <%= f.input :ingredient_quantity, label: false %>
          <%= f.hidden_field :ingredient, value: "#{ingredient.id}" %>
            <%= button_tag do %>
            <div class="btn-cart">
              <p class="color-white"><i class="fas fa-cart-arrow-down"></i></p>
            </div>
            <% end %>
        <% end %>

      </div>

  </div>
<% end %>

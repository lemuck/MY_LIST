<div class="container" id="search-category">
    <%= form_tag ingredients_path, method: :get do %>
    <div class="d-flex search">
        <%= text_field_tag :query,
        params[:query],
        class: "form-control", id:"form-control-search",
        placeholder: "Find an ingredient"%>
        <%= button_tag(type:"submit", class: "btn btn-flat", id:"btn-ingredient") do %>
            <i class="fas fa-search text-decoration-none text-white h4"></i>
        <% end %>
    </div>
    <% end %>
</div>
  
<div class="container-category">
    <div class="d-flex justify-content-between">
        <%= link_to ingredients_path(category: "dry") do%>
            <div class="card-category" id="dry">
                <div class="opacity-category">
                    <h3 class="padding11 categorie"><strong>Dry</strong></h3>
                </div>
            </div>
        <% end %>
        <%= link_to ingredients_path(category: "vegetables") do%>
            <div class="card-category" id="vegetable">
                <div class="opacity-category">
                    <h3 class="padding11 categorie"><strong>Vegetables</strong></h3>
                </div>
            </div>
        <% end %>
    </div>
    <div class="d-flex justify-content-between">
        <%= link_to ingredients_path(category: "dairy milk"), class:'text-decoration-none' do %>
            <div class="card-category" id="diary">
                <div class="opacity-category">
                    <h3 class="padding8 categorie"><strong>Dairy products</strong></h3>
                </div>
            </div>
        <% end %>
        <%= link_to ingredients_path(category: "condiment") do%>
            <div class="card-category" id="condiment">
                <div class="opacity-category">
                    <h3 class="padding10 categorie"><strong>Condiment</strong></h3>
                </div>
            </div>
        <% end %>
    </div>
    <div class="d-flex justify-content-between">
        <%= link_to ingredients_path(category: "meat") do%>
            <div class="card-category" id="meat">
                <div class="opacity-category">
                    <h3 class="padding11 categorie"><strong>Meat</strong></h3>
                </div>
            </div>
        <% end %>
        <%= link_to ingredients_path(category: "sauce") do%>
            <div class="card-category" id="sauce">
                <div class="opacity-category">
                    <h3 class="padding11 categorie"><strong>Sauce</strong></h3>
                </div>
            </div>
        <% end %>
    </div>
</div>
<div class='container'>

  <div class='row'>
    <div class='col-12'>
      <%= link_to '#', class:'text-decoration-none' do %>
        <div class='card-banner' id='card-banner-list'>
          <span class='card-banner-text color-white'>My List</span>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <%= link_to recipes_path, class:'text-decoration-none' do %>
        <div class='card-banner' id='card-banner-recipes'>
          <span class='card-banner-text color-white'>Recipes</span>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <%= link_to ingredients_path, class:'text-decoration-none' do %>
        <div class='card-banner' id='card-banner-ingredients'>
          <span class='card-banner-text color-white'>Ingredients</span>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <div class='card-banner'>
        <span class='card-banner-text'>Best Recipes</span>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
  <!--  CAROUSEL ICI ######################################################### -->

      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="card-recipe">
              <div class="recipe-info">
                <h4> Chocolate Cake </h4>
              </div>
              <img src="https://image.flaticon.com/icons/png/512/1046/1046857.png" alt="Le Wagon logo" class="recipe-image">
            </div>
          </div>

          <% Recipe.all.sample(3).each do |recipe| %>
            <div class="carousel-item">
              <div class="card-recipe">
                <div class="recipe-info">
                  <h4> <%= recipe.name %> </h4>
                </div>
                <img src="https://image.flaticon.com/icons/png/512/1046/1046857.png" alt="Le Wagon logo" class="recipe-image">
              </div>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      
    </div>
  </div>

  <!--Effacer quand la home est terminÃ©e-->
  <br><br><br><br><br><br><br><br><br><br><br><br><br>
</div>




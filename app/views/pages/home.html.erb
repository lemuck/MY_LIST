<div class='container'>

  <div class='row'>
    <div class='col-12'>
      <%= link_to '#', class:'text-decoration-none' do %>
        <div class='card-banner' id='card-banner-list'>
          <span class='card-banner-text color-white'>My List</span>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <%= link_to recipes_path, class:'text-decoration-none' do %>
        <div class='card-banner' id='card-banner-recipes'>
          <span class='card-banner-text color-white'>Recipes</span>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <%= link_to ingredients_path, class:'text-decoration-none' do %>
        <div class='card-banner' id='card-banner-ingredients'>
          <span class='card-banner-text color-white'>Ingredients</span>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <div class='card-banner'>
        <span class='card-banner-text'>Best Recipes</span>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
  <!--  CAROUSEL ICI ######################################################### -->

      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="card">
              <img src="https://images.pexels.com/photos/132694/pexels-photo-132694.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="Le Wagon logo" class="recipe-image">
              <div class="card-body">
                <h5 class="card-title">Chocolate cake</h5>
                <p class="card-text"> Chocolate Cake</p>
              </div>
            </div>
          </div>

          <% Recipe.all.sample(3).each do |recipe| %>
            <div class="carousel-item">

            <%= link_to recipe_path(recipe), class:"text-decoration-none" do %>
              <div class="card">
                <img src="https://images.pexels.com/photos/132694/pexels-photo-132694.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" alt="Le Wagon logo" style="height= 50px" class="recipe-image">
                <div class="card-body">
                  <h5 class="card-title text-dark"><%= recipe.name %></h5>
                  <p class="card-text text-dark"><%= recipe.description %></p>
                </div>
              </div>
            <% end %>

            </div>
          <% end %>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

    </div>
  </div>

  <!--Effacer quand la home est terminÃ©e-->
  <br><br><br><br>
</div>

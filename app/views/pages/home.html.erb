<div class='container'>

  <div class='row'>
    <div class='col-12'>
      <%= link_to '#', class:'text-decoration-none' do %>
        <div class='card-banner' id='card-banner-list'>
          <span class='card-banner-text color-white'>My List</span>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <%= link_to recipes_path, class:'text-decoration-none' do %>
        <div class='card-banner' id='card-banner-recipes'>
          <span class='card-banner-text color-white'>Recipes</span>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <%= link_to ingredients_path, class:'text-decoration-none' do %>
        <div class='card-banner' id='card-banner-ingredients'>
          <span class='card-banner-text color-white'>Shop</span>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <div class='card-banner' id="card-best-rec">
        <span class='card-banner-text'>Top rated recipes</span>
      </div>
    </div>
  </div>

  <div class='container-scroll'>
    <% @recipes.sample(5).each do |recipe|  %>
      <div class='row'>
        <div class='col'>
          <%= link_to recipe_path(recipe), class:"text-decoration-none" do %>
            <div class="card-scroll">
              <img src="https://images.pexels.com/photos/132694/pexels-photo-132694.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" class="recipe-img-scroll">
              <div>
                <h5 class="card-title text-dark" id="body-scroll"><%= recipe.name %></h5>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
      


  <!--Effacer quand la home est terminÃ©e-->
  <br><br><br><br>
</div>

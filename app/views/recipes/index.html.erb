<div class="container">
  <h1>All recipes</h1>

  <%= form_tag recipes_path, method: :get do %>
   <div class="d-flex search">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a recipe"%>
      <%= submit_tag "Search", class: "btn btn-flat" %>
   </div>
  <% end %>

  <% if @user %>
    <% if @user.moderator %>
      <%= link_to 'Add a recipe', new_recipe_path %>
    <% end %>
  <% end %>

  <div class="container">
    <% @recipes.each do |recipe| %>
      <div class="row">
        <div class="col-12">
          <%= link_to recipe_path(recipe), class:'text-decoration-none' do %>
            <div class="card-recipe">
              <div class="recipe-info">
                <h4> <%= recipe.name %> </h4>
              </div>
              <img src="https://image.flaticon.com/icons/png/512/1046/1046857.png" alt="Le Wagon logo" class="recipe-image">
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <h1 class="title-recipe-index">-All recipes-</h1>

  <%= form_tag recipes_path, method: :get do %>
   <div class="d-flex search">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control", id:"form-control-search",
      placeholder: "Find a recipe"%>
      <%= button_tag(type:"submit", class: "btn btn-flat") do %>
        <i class="fas fa-search text-decoration-none text-white h4"></i>
      <% end %>
   </div>
  <% end %>

  <% if @user %>
    <% if @user.moderator %>
      <%= link_to 'Add a recipe', new_recipe_path %>
    <% end %>
  <% end %>

  <div class="container">
    <% @recipes.each do |recipe| %>
      <div class="row">
        <div class="col-12">
          <%= link_to recipe_path(recipe), class:'text-decoration-none' do %>
            <div class="card-recipe">
              <div class="recipe-info">
                <h4> <%= recipe.name %> </h4>
              </div>
              <%= cl_image_tag recipe.photo.key, height: 300, width: 400, crop: :fill,  class: "recipe-image"%>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

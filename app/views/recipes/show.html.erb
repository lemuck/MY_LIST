<div class="container">
  <div>
    <img src="https://image.flaticon.com/icons/png/512/1046/1046857.png" class="img-show">
  </div>
  <h1 class="title-show"><%= @recipe.name %></h1>
  <div class="card-show">
    <div class="show-margin">
      <div class="d-flex">
        <strong><p class="person-number">Person number :</p></strong>
        <div class="form">
          <%= simple_form_for(@recipe) do |f| %>
           <%= f.input :person_number, label: false %>
        </div>
            <%= f.button :submit, value: "Valid" , class:"btn-form"%>
          <% end %>
      </div>
      <div class="recette">
        <strong><p id="titre">Ingredients : </p></strong>
        <%@recipe.ingredient_recipes.each do |ingredient_recipe|%>
          <li><%= (ingredient_recipe.ingredient_quantity * @recipe.person_number).round%>
          <%= ingredient_recipe.ingredient.unit %>
          <%= ingredient_recipe.ingredient.name %></li>
        <% end %>
        <br>
        <strong><p id="titre">Recipe :</p></strong>
        <div class="etape">
          <ol>
          <% @recipe.description.split(".").each do |step| %>
            <div class="container">
              <li class="text-justify"><%= step %></li>
              <br>
            </div>
          <% end %>
          </ol>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "#", class:"text-decoration-none" do %>
    <div class="btn-show">
      <p class="color-white">Add to card</p>
    </div>
  <% end %>
</div>